{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "py3: debug - file stdio",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "<",
                "${fileDirname}/${fileBasenameNoExtension}.in",
                ">",
                "${fileDirname}/${fileBasenameNoExtension}.outputSolved"
            ],
            "postDebugTask": "Compare-2-files",
            "console": "integratedTerminal",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv"
            }
        },
        {
            "name": "py3: debug interactive",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv"
            }
        },
        {
            "name": "clang++: debug interactive",
            "type": "lldb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.bin",
            "args": [],
            "cwd": "${fileDirname}",
            "preLaunchTask": "clang++: build active file"
        },
        {
            "name": "gcc: debug interactive",
            "type": "lldb",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.bin",
            "args": [],
            "cwd": "${fileDirname}",
            "preLaunchTask": "gcc: g++-15 build active file"
        }
    ]
}