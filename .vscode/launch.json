{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "py3: debug - file stdio",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": [
                "<",
                "${fileDirname}/${fileBasenameNoExtension}.in",
                ">",
                "${fileDirname}/${fileBasenameNoExtension}.outputSolved"
            ],
            "postDebugTask": "Compare-2-files",
            "console": "integratedTerminal",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv"
            }
        },
        {
            "name": "py3: debug interactive",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "VIRTUAL_ENV": "${workspaceFolder}/.venv"
            }
        },
        {
            "name": "C++: debug interactive",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "C/C++: g++-14 build active file"
        }
    ]
}