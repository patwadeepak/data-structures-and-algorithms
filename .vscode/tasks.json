{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compare-2-files",
            "type": "shell",
            "command": "code --diff \"${fileDirname}/${fileBasenameNoExtension}.outputCorrect\" \"${fileDirname}/${fileBasenameNoExtension}.outputSolved\""
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++-14 build active file",
            "command": "/opt/homebrew/bin/g++-14",
            "args": [
                "-std=c++17",
                "-O2",
                "-Wall",
                "-Wextra",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}